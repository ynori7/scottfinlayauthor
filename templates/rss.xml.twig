<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
   xmlns:content="http://purl.org/rss/1.0/modules/content/"
   xmlns:wfw="http://wellformedweb.org/CommentAPI/"
   xmlns:dc="http://purl.org/dc/elements/1.1/"
   xmlns:atom="http://www.w3.org/2005/Atom"
   xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
   xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
>

    <channel>
        <title>Scott Finlay</title>
        <atom:link href="https://www.susanfinlay.com/feed/" rel="self" type="application/rss+xml" />
        <link>https://www.scottfinlayauthor.com</link>
        <description>Science Fiction, Mystery, and Technothrillers</description>
        <lastBuildDate>{{ 'now'|date('D, d M y H:i:s O') }}</lastBuildDate>
        <language>en-US</language>
        <sy:updatePeriod>hourly</sy:updatePeriod>
        <sy:updateFrequency>1</sy:updateFrequency>
        <generator>https://github.com/ynori7/scottfinlayauthor/blob/master/generate.php</generator>

        <image>
            <url>https://www.scottfinlayauthor.com/favicon-32x32.png</url>
            <title>Scott Finlay</title>
            <link>https://www.scottfinlayauthor.com</link>
            <width>32</width>
            <height>32</height>
        </image>

        {% for item in items -%}
        <item>
            <title>{{ item.name }}</title>
{% if not item.link == '' %}            <link>{{ item.link }}</link>{% endif %}
            <pubDate>{{ item.date }}</pubDate>
            <description><![CDATA[{% spaceless %}{% include item.include with {'is_rss': true} %}{% endspaceless %}]]></description>
        </item>
        {%- endfor %}

    </channel>
</rss>
